<div class = "row">
  <div class = "col-md-6">
    <%= simple_form_for(@product) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,required: true,label: false, placeholder: "Title" %>
        <%= f.input :author,required: true,label: false, placeholder: "Author" %>
        <%= f.input :description,required: true,label: false, placeholder: "Description", input_html: {rows: 8}  %>
        <%= f.input :price,required: true,label: false, placeholder: "Price" %>
        <%= f.input :image %>
        <%= f.input :resource %>
        <%= f.input :availability %>
      </div>

      <div class="form-actions">
        <%= f.button :submit,class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
</br>
